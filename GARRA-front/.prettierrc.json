{
  "tabWidth": 2,
  "semi": false,
  "printWidth": 80,
  "singleQuote": true,
  "endOfLine": "auto",
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "bracketSpacing": true,
  "trailingComma": "none",
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "importOrder": [
    "^.$|^./types$|^./styles|^./logic$",
    "^./|^../",
    "^@app/styles",
    "^@app/components/atoms",
    "^@app/components/molecules",
    "^@app/components/organisms",
    "^@app/components/templates",
    "^@app/components/providers",
    "^@app/components/utilities",
    "^@app/static",
    "^@app/pages",
    "^@app/hooks",
    "^@app/store",
    "^@app/services",
    "^@app/tests",
    "^@app/types",
    "^@app/utils",
    "^@public",
    "^@common",
    "<THIRD_PARTY_MODULES>"
  ]
}
